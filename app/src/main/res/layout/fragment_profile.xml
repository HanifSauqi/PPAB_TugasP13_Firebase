<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00296B"
    android:padding="4dp"
    tools:context=".user.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/pro_lin1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/white"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile "
                            android:layout_marginBottom="28dp"
                            android:textStyle="bold"
                            android:textSize="28sp"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama :"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/txt_nama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Muhammad Hanif Sauqi"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email :"
                            android:textColor="@color/black" />
                            <TextView
                                android:id="@+id/txt_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HanifSauqi@gmail.com"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/pro_lin2"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:layout_marginTop="40dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            card_view:cardBackgroundColor="#FFF"
                            card_view:layout_anchorGravity="center|bottom"
                            card_view:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginRight="25dp"
                                    android:layout_centerVertical="true"
                                    >
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:weightSum="3">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1">
                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="match_parent"

                                                    android:textAlignment="center"
                                                    android:layout_height="wrap_content"
                                                    android:textSize="12sp"
                                                    android:text="Height (cm)"/>

                                                <TextView
                                                    android:id="@+id/txt_tinggi_badan"
                                                    android:textColor="@color/black"
                                                    android:layout_width="match_parent"
                                                    android:textAlignment="center"
                                                    android:layout_height="wrap_content"
                                                    android:text="456 "/>
                                            </LinearLayout>
                                        </RelativeLayout>
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1">
                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:textAlignment="center"
                                                    android:layout_height="wrap_content"

                                                    android:textSize="12sp"
                                                    android:text="Weight (kg)"/>

                                                <TextView
                                                    android:id="@+id/txt_berat_badan"
                                                    android:textColor="@color/black"
                                                    android:layout_width="match_parent"
                                                    android:textAlignment="center"
                                                    android:layout_height="wrap_content"
                                                    android:text="300"/>
                                            </LinearLayout>
                                        </RelativeLayout>
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1">
                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Kalori harian (Kkal)"
                                                    android:textAlignment="center"
                                                    android:textSize="12sp" />

                                                <TextView
                                                    android:id="@+id/txt_target_kalori"
                                                    android:textColor="@color/black"
                                                    android:layout_width="match_parent"
                                                    android:textAlignment="center"
                                                    android:layout_height="wrap_content"
                                                    android:text="200"/>
                                            </LinearLayout>
                                        </RelativeLayout>
                                    </LinearLayout>
                                </RelativeLayout>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40dp"
                                android:background="@color/white">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:padding="30dp"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pengaturan"
                                        />

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_height="24dp"
                                            android:layout_centerVertical="true"
                                            android:src="@drawable/baseline_keyboard_arrow_right_24"/>

                                    </RelativeLayout>

                                </LinearLayout>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@color/white">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:padding="30dp"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tutorial" />

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_height="24dp"
                                            android:layout_centerVertical="true"
                                            android:src="@drawable/baseline_keyboard_arrow_right_24"/>

                                    </RelativeLayout>

                                </LinearLayout>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@color/white">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:padding="30dp"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Help Center"/>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_height="24dp"
                                            android:layout_centerVertical="true"
                                            android:src="@drawable/baseline_keyboard_arrow_right_24"/>

                                    </RelativeLayout>

                                </LinearLayout>
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/btn_delete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@color/white">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:padding="30dp"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Hapus Akun"/>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_height="24dp"
                                            android:layout_centerVertical="true"
                                            android:src="@drawable/baseline_keyboard_arrow_right_24"/>

                                    </RelativeLayout>

                                </LinearLayout>
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/btn_logout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@color/white">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:padding="30dp"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Keluar"/>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_height="24dp"
                                            android:layout_centerVertical="true"
                                            android:src="@drawable/baseline_keyboard_arrow_right_24"/>

                                    </RelativeLayout>

                                </LinearLayout>
                            </RelativeLayout>

                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </ScrollView>
</RelativeLayout>